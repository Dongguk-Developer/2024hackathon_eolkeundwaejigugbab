<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <!-- 지도 영역 -->
    <ImageView
        android:id="@+id/mapImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/seonggeon"
        android:layout_marginBottom="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <!-- 첫 번째 행 -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageButton
                    android:id = "@+id/seonggeon_item1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/seong_out_3"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="주소 : 경주시 성건동 12-34&#10;면적 : 20평"
                    android:textSize="16sp" />
            </TableRow>

            <!-- 두 번째 행 -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageButton
                    android:id = "@+id/seonggeon_item2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/seong_out_2"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="주소 : 경주시 성건동 12-35&#10;면적 : 32평"
                    android:textSize="16sp" />
            </TableRow>

            <!-- 세 번째 행 -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageButton
                    android:id = "@+id/seonggeon_item3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/seong_out_1"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="주소 : 경주시 성건동 12-36&#10;면적 : 40평"
                    android:textSize="16sp" />
            </TableRow>

            <!-- 네 번째 행 -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageButton
                    android:id = "@+id/seonggeon_item4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/seong_out_3"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="주소 : 경주시 성건동 12-37&#10;면적 : 60평"
                    android:textSize="16sp" />
            </TableRow>

        </TableLayout>
    </ScrollView>
</LinearLayout>
