<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center_horizontal">


    <!-- 상단 타이틀 (이미지로 대체) -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/apec"
        android:contentDescription="2025 APEC Gyeongju 타이틀 이미지"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:paddingTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- 버튼 그리드 -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="2"
        android:rowCount="4"
        android:padding="16dp"
        android:useDefaultMargins="true">

        <!-- 버튼 1: 동천동 -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp">

            <ImageButton
                android:id="@+id/btnDongcheon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dongcheon"
                android:scaleType="centerCrop"
                android:background="@null"
                android:contentDescription="동천동"
                android:onClick="onDongcheonClick" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동천동"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:padding="4dp"
                android:layout_gravity="center" />
        </FrameLayout>

        <!-- 버튼 2: 선도동 -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp">

            <ImageButton
                android:id="@+id/btnSundo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/seonggeon"
                android:scaleType="centerCrop"
                android:background="@null"
                android:contentDescription="선도동"
                android:onClick="onSeondoClick" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선도동"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:padding="4dp"
                android:layout_gravity="center" />
        </FrameLayout>

        <!-- 버튼 3: 성건동 -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp">

            <ImageButton
                android:id="@+id/btnSeonggeon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/seonggeon"
                android:scaleType="centerCrop"
                android:background="@null"
                android:contentDescription="성건동"
                android:onClick="onSeonggeonClick" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성건동"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:padding="4dp"
                android:layout_gravity="center" />
        </FrameLayout>

        <!-- 버튼 4: 월성동 -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp">

            <ImageButton
                android:id="@+id/btnWolseong"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/wolseong"
                android:scaleType="centerCrop"
                android:background="@null"
                android:contentDescription="월성동"
                android:onClick="onWolseongClick" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="월성동"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:padding="4dp"
                android:layout_gravity="center" />
        </FrameLayout>

        <!-- 버튼 5: 용강동 -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp">

            <ImageButton
                android:id="@+id/btnYonggang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/yonggang"
                android:scaleType="centerCrop"
                android:background="@null"
                android:contentDescription="용강동"
                android:onClick="onYonggangClick" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="용강동"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:padding="4dp"
                android:layout_gravity="center" />
        </FrameLayout>

        <!-- 버튼 6: 황성동 -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp">

            <ImageButton
                android:id="@+id/btnHwangseong"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/hwangseong"
                android:scaleType="centerCrop"
                android:background="@null"
                android:contentDescription="황성동"
                android:onClick="onHwangseongClick" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="황성동"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:padding="4dp"
                android:layout_gravity="center" />
        </FrameLayout>

    </GridLayout>

    <!-- 하단 이미지 버튼 -->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center"

        android:background="@color/white">

        <Button
            android:id="@+id/home"
            android:text="홈"
            style="@style/rect" />

        <Button
            android:id="@+id/login"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Login" />

        <Button
            android:id="@+id/search"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="검색" />

        <Button
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="메뉴" />
    </LinearLayout>

</LinearLayout>
